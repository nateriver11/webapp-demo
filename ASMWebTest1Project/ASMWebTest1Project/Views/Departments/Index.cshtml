@model IEnumerable<ASMWebTest1Project.Models.Departments>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}

<section class="home-section">
    <nav>
        <div class="sidebar-button">


        </div>
        <div class="search-box" style="display: flex">
            @using (Html.BeginForm("Index", "Categories", FormMethod.Get))
            {
                @Html.TextBox("Search_Data", ViewBag.FilterValue as string, new { @placeholder = "Search" })

                <input class="search" type="submit" value="     " /><i class="fa fa-search" style="font-size: 28px; position: absolute;
        left: 275px;
        top: 10px;
"></i>

            }
        </div>
        <div class="profile-details">

            <span class="admin_name">
                Welcome, @Html.DisplayFor(modelItem => User.Identity.Name)
            </span>

        </div>
    </nav>

    <div class="home-content">


        <div class="sales-boxes">
            <div class="recent-sales box">
                <div class="title text-center"><h3>Department Manage</h3></div>
                <br />
                <button class="btn btn-secondary">
                   
                        @Html.ActionLink("Create New", "Create")
                   
                </button>
             
                <br />
                <br />
                <div class="sales-details">
                    <table class="table">
                        <tr>
                            <th style="color:#337ab7 ">
                                Department Name
                            </th>
                            <th style="color:#337ab7 ">
                                Actions
                            </th>
                        </tr>

                        @foreach (var item in Model)
                        {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.departmenName)
                        </td>
                        <td style="display:flex">
                            <a>@Html.ActionLink(" ", "Details", new { id = item.departmentID }, new { @class = "fa-solid fa-circle-info decor-fa-ds", @style = "font-size: 20px; letter-spacing:5px; color: #337ab7" })</a>
                            <a>@Html.ActionLink(" ", "Edit", new { id = item.departmentID }, new { @class = "fa-solid fa-pen-to-square decor-fa-e", @style = "font-size: 20px; letter-spacing:5px; color: #337ab7" })</a>
                            <a>@Html.ActionLink(" ", "Delete", new { id = item.departmentID }, new { @class = "fa-solid fa-trash-can decor-fa-d", @style = "font-size: 20px; letter-spacing:5px; color: #337ab7" })</a>
                        </td>
                    </tr>
                        }

                    </table>

                </div>
                <br />
                <br />
               
            </div>

        </div>
    </div>
</section>



