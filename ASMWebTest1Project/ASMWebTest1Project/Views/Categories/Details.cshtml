@model ASMWebTest1Project.Models.Categories

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/Details.cshtml";
}


<section class="home-section">
    <nav>
        <div class="sidebar-button">

            <span class="dashboard">Details</span>
        </div>
        <div class="search-box" style="display: flex">
            @using (Html.BeginForm("Index", "Ideas", FormMethod.Get))
            {
                @Html.TextBox("Search_Data", ViewBag.FilterValue as string, new { @placeholder = "Search" })
                <input class="search" type="submit" value="     " /><i class="fa fa-search" style="font-size: 28px; position: absolute;
        left: 275px;
        top: 10px;
"></i>
            }
        </div>
        <div class="profile-details">

            <span class="admin_name">
                Welcome, @Html.DisplayFor(modelItem => User.Identity.Name)
            </span>

        </div>
    </nav>
    /////////////////////////
    <div class="home-content">


        <div class="sales-boxes">
            <div class="recent-sales box">
                <div class="sales-details" style="display:block">
                    @using (Html.BeginForm("Create",
                         "Ideas",
                         FormMethod.Post,
                         new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                        <div>
                            <h3 class="text-center">Categories</h3>
                            <hr />
                            <dl class="dl-horizontal">
                                <dt class="text-capitalize">
                                    @Html.DisplayNameFor(model => model.categoryName)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.categoryName)
                                </dd>

                                <dt class="text-capitalize">
                                    @Html.DisplayNameFor(model => model.closureDate)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.closureDate)
                                </dd>

                                <dt class="text-capitalize">
                                    @Html.DisplayNameFor(model => model.finalDate)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.finalDate)
                                </dd>

                                <dt class="text-capitalize">
                                    @Html.DisplayNameFor(model => model.Cstatus)
                                </dt>

                                <dd>
                                    @Html.DisplayFor(model => model.Cstatus)
                                </dd>

                            </dl>
                        </div>
                        <p>
                            @Html.ActionLink("Edit", "Edit", new { id = Model.categoryID }) |
                            @Html.ActionLink("Back to List", "Index")
                        </p>
                    }
                </div>
            </div>

        </div>


    </div>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
</section>

