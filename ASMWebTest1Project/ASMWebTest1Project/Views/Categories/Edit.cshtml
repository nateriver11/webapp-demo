@model ASMWebTest1Project.Models.Categories

@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}



@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()


}
<section class="home-section">
    <nav>
        <div class="sidebar-button">

            <span class="dashboard">6Bros</span>
        </div>
        <div class="search-box" style="display: flex">
            @using (Html.BeginForm("Index", "Categories", FormMethod.Get))
            {
                @Html.TextBox("Search_Data", ViewBag.FilterValue as string, new { @placeholder = "Search" })
                <input class="search" type="submit" value="    " /><i class="fa fa-search" style="font-size: 28px; position: absolute;
        left: 275px;
        top: 10px;
"></i>      }
        </div>
        <div class="profile-details">

            <span class="admin_name">
                Welcome, @Html.DisplayFor(modelItem => User.Identity.Name)
            </span>

        </div>
    </nav>
    <div class="home-content">


        <div class="sales-boxes">
            <div class="recent-sales box">
                <div class="sales-details" style="display:block">
                    @using (Html.BeginForm("Edit", "Categories", FormMethod.Post, new { enctype = "multipart/form-data" }))
                    {
                        @Html.AntiForgeryToken()
                    <div class="container" style="border:1px solid gray; border-radius: 30px; width: 37%">
                        <h3 class="text-center">Edit Categories</h3>

                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                        @Html.HiddenFor(model => model.categoryID)

                        <div class="form-group">
                            <h4> Categories Name</h4>
                            <div>
                                @Html.EditorFor(model => model.categoryName, new { htmlAttributes = new { @class = "form-control",@enable = "enable"
                           } })
                                @Html.ValidationMessageFor(model => model.categoryName, "", new { @class = "text-danger" })
                            </div>
                        </div>

                        <div class="form-group">
                            <h4>ClosureDate</h4>
                            <div>
                                @Html.EditorFor(model => model.closureDate, new { htmlAttributes = new { @class = "form-control", @type = "datetime-local" } })
                                @Html.ValidationMessageFor(model => model.closureDate, "", new { @class = "text-danger", @type = "datetime-local" })
                            </div>
                        </div>

                        <div class="form-group">
                            <h4>FinalDate</h4>
                            <div>
                                @Html.EditorFor(model => model.finalDate, new { htmlAttributes = new { @class = "form-control", @type = "datetime-local" } })
                                @Html.ValidationMessageFor(model => model.finalDate, "", new { @class = "text-danger", @type = "datetime-local" })
                            </div>
                        </div>

                        @Html.Hidden("Cstatus", "true")

                        <div class="form-group">
                            <div class="text-center">
                                <input type="submit" value="Save" class="btn btn-success" />
                            </div>
                        </div>
                    </div>
                        <div>

                            <a href="~/Categories/Index">
                                <i class="bx bx-left-arrow-circle" style="width:100%;font-size:40px;"></i>
                            </a>



                        </div>
                    }
                </div>
            </div>

        </div>


    </div>
 
</section>

  

    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }
