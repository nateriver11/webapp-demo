@using PagedList.Mvc;
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css" integrity="sha512-10/jx2EXwxxWqCLX/hHth/vu2KY3jCF70dCQB8TSgNjbCVAC/8vai53GfMDrO2Emgwccf2pJqxct9ehpzG+MTw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
<script src="https://cdn.plot.ly/plotly-latest.min.js"></script>
@{
    //var totalIdeas = ViewBag.TotalIdeas;
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Dashboard.cshtml";
}


<section class="home-section">
    <nav>
        <div class="sidebar-button">


        </div>
        <div class="search-box" style="display: flex">
            @using (Html.BeginForm("Index", "Information", FormMethod.Get))
            {
                @Html.TextBox("Search_Data", ViewBag.FilterValue as string, new { @placeholder = "Search" })
                <input class="search" type="submit" value="     " /><i class="fa fa-search" style="font-size: 28px; position: absolute;
        left: 270px;
        top: 10px;
"></i>      }
        </div>
        <div class="profile-details">

            <span class="admin_name">
                Welcome, @Html.DisplayFor(modelItem => User.Identity.Name)
            </span>

        </div>
    </nav>

    <div class="home-content">
        <div class="overview-boxes">
            <div class="box">
                <div class="right-side">
                    <div class="box-topic">Total Post</div>
                    <div>
                        @ViewBag.countIdea
                    </div>
                    
                </div>
            </div>
            <div class="box">
                <div class="right-side">
                    <div class="box-topic text-center">MostPopular</div>
                    <div class="text-center number">
                        @foreach (var item in ViewBag.MostPopular)
                        {
                            <a>@item.TotalInteract</a><br />
                            <a href="~/Ideas/Details/@item.ideaID">@item.Title</a>

                        }
                    </div>
                </div>
            </div>
            <div class="box">
                <div class="right-side">
                    <div class="box-topic">Most View</div>
                    <div class="number">
                        @foreach (var item1 in ViewBag.MostViewed)
                        {
                            <a>@item1.CountViews</a>
                            <a href="~/Ideas/Details/@item1.ideaID">@item1.ideaTitle</a>
                        }
                    </div>
                </div>
            </div>
            <div class="box">
                <div class="right-side">
                    <div class="box-topic">Total Return</div>
                    <div class="number">11,086</div>
                    <div class="indicator">
                    </div>
                </div>
            </div>
            <div class="sales-boxes">
                <div class="recent-sales box" >
                    
                    <div id="Chart1" style="width:100%"></div>
                    <div id="Chart2" style="width:100%"></div>

                </div>
               
            </div>
            
        </div>

        </div></section>

<script>
    var xArray1 =  @Html.Raw(Json.Encode(ViewBag.DepartmentName1));
    var yArray1 =  @Html.Raw(Json.Encode(ViewBag.Ideas));

    var data1 = [{
        x: xArray1,
        y: yArray1,
        type: "bar"
    }];

    var layout1 = { title: "Number of ideas by department" };

    Plotly.newPlot("Chart1", data1, layout1);

    var xArray2 = @Html.Raw(Json.Encode(ViewBag.Contributors));
    var yArray2 = @Html.Raw(Json.Encode(ViewBag.DepartmentName2));

    var data2 = [{
        x: xArray2,
        y: yArray2,
        type: "bar",
        orientation: "h",
        marker: { color: "rgba(255,0,0,0.6)" }
    }];

    var layout2 = { title: "Number of contributors by department" };

    Plotly.newPlot("Chart2", data2, layout2);
</script>